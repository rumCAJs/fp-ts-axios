{
  "extends": "@tsconfig/node16/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },

  "include": ["./index.ts", "./types.ts"]
}
